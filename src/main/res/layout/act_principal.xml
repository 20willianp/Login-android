<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.login.ActPrincipal">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:text="Usuario"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/comum_edt_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Nome de usuario"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comum_edt_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Senha" />

    <EditText
        android:id="@+id/comum_edt_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/comum_edt_user"
        android:layout_alignRight="@+id/comum_edt_user"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Senha de usuario"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_logar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comum_edt_senha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:onClick="evtLogar"
        android:text="entrar" />

</RelativeLayout>
