<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.login.ActUserComum">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="63dp"
        android:text="Usuario" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="Senha"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Confirmação"
        android:layout_below="@+id/comum_edt_senha"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:id="@+id/comum_edt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/comum_edt_senha"
        android:layout_alignStart="@+id/comum_edt_senha"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/comum_edt_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/comum_edt_confir_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignLeft="@+id/comum_edt_senha"
        android:layout_alignStart="@+id/comum_edt_senha"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_atualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/comum_edt_confir_senha"
        android:layout_marginTop="18dp"
        android:onClick="comumEvtAtualizar"
        android:text="Atualizar" />

    <Button
        android:id="@+id/btn_excluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_atualizar"
        android:layout_alignBottom="@+id/btn_atualizar"
        android:layout_alignLeft="@+id/comum_edt_confir_senha"
        android:layout_alignStart="@+id/comum_edt_confir_senha"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:onClick="comumEvtExcluir"
        android:text="Excluir" />

    <Button
        android:id="@+id/btn_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_excluir"
        android:layout_alignEnd="@+id/comum_edt_confir_senha"
        android:layout_alignRight="@+id/comum_edt_confir_senha"
        android:onClick="comumEvtVoltar"
        android:text="Voltar" />
</RelativeLayout>
